@model PropertyApp.Models.Property

<form asp-action="Create" method="post" enctype="multipart/form-data" class="container mt-5 p-4 border rounded shadow-sm bg-light">
    <h2 class="text-center mb-4">Create New Property</h2>
    
    <div class="mb-3">
        <label asp-for="Title" class="form-label">Property Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter property title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="Address" class="form-label">Address</label>
        <input asp-for="Address" class="form-control" placeholder="Enter address" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    
    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Price" class="form-label">Price ($)</label>
            <input asp-for="Price" class="form-control" placeholder="Enter price" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Bedrooms" class="form-label">Bedrooms</label>
            <input asp-for="Bedrooms" class="form-control" placeholder="No. of bedrooms" />
            <span asp-validation-for="Bedrooms" class="text-danger"></span>
        </div>
        <div class="col-md-3 mb-3">
            <label asp-for="Bathrooms" class="form-label">Bathrooms</label>
            <input asp-for="Bathrooms" class="form-control" placeholder="No. of bathrooms" />
            <span asp-validation-for="Bathrooms" class="text-danger"></span>
        </div>
    </div>
    
    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label">Property Image</label>
        <input asp-for="ImageUrl" type="file" class="form-control" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="DetailDescription" class="form-label">Description</label>
        <textarea asp-for="DetailDescription" class="form-control" rows="5" placeholder="Enter detailed description of the property"></textarea>
        <span asp-validation-for="DetailDescription" class="text-danger"></span>
    </div>
    
    <div class="text-center mt-4">
        <button type="submit" class="btn btn-primary px-4">Create Property</button>
    </div>
</form>
