@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <h2>Welcome, Admin!</h2>
    <p>This is your dashboard where you can manage properties, users, and other settings.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    Total Properties
                </div>
                <div class="card-body">
                    <h5 class="card-title">120</h5>
                    <p class="card-text">Total properties listed in the system.</p>
                    <a asp-controller="Property" asp-action="Index" class="btn btn-primary">View Properties</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    Total Users
                </div>
                <div class="card-body">
                    <h5 class="card-title">50</h5>
                    <p class="card-text">Total users registered in the system.</p>
                    <a asp-controller="User" asp-action="Index" class="btn btn-primary">View Users</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    Recent Activities
                </div>
                <div class="card-body">
                    <p class="card-text">Check the logs for recent activities in the system.</p>
                    <a asp-controller="Activity" asp-action="Index" class="btn btn-primary">View Logs</a>
                </div>
            </div>
        </div>
    </div>
</div>
